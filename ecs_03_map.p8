-- #################### entities

-- make player at x,y
function mk_player(x, y)
  local e = ent()
  e += c_mappos(x, y)
  e += c_spr(1)
  e += c_control()
  return e
end

-- make map data holder entity
function mk_map(xmax, ymax)
  local e = ent()
  e += c_camerapos(0, 0)
  e += c_map(xmax, ymax)
  return e
end
