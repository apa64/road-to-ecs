#include tinyecs-1.1.lua

-- master container of entities
ents = {}
e_player = nil
e_map = nil

function _init()
  -- player
  e_player = mk_player(7, 4)
  add(ents, e_player)
  -- map
  e_map = mk_map(31, 15)
end

function _update()
  s_control(ents)
end

function _draw()
  cls()
  draw_map(e_map, e_player)
  s_draw(ents)
end

